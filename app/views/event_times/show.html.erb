<div class="col-sm-12">
  <h1><%= "#{@event.title}'s attendees" %></h1>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <h4>
    <%= datetime_formatter(@event_time.start_time) %> to
    <%= datetime_formatter(@event_time.end_time) %>
  </h4>
  <br />
    <% if @event_time.tickets.empty? %>
      <h2>You currently have attendees.</h2>
      <p>When you have your first attendees, their name and email will show up here!</a></p>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <% @tickets.each do |ticket| %>
          <tbody>
            <td><%= ticket.attendee.first_name %></td>
            <td><%= ticket.attendee.last_name %></td>
            <td><%= ticket.attendee.email %></td>
          </tbody>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
